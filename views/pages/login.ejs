<body>

    <div id="errorContainer" class="hidden">
        <div id="errorContent">
            <p id="errorText"></p>
            <i id="closeErrorContainer" class="fa fa-window-close closeSectionMark" aria-hidden="true"></i>
        </div>
    </div>
    <div id="loginWrapper">
    <div id="loginContainer">
        <h1>Welcome to Draw n' Chat!</h1>
        <form id="loginForm" class="fromContainer" action="/user/login" method="post">
            <div>
                <input type="text" name="userName" id="userName" placeholder="Pick a nickname and let's scribble!" required>
            </div>
            <div class="buttonContainer">
                <button type="submit" id="loginBtn">Let me chat already!</button>
            </div>
        </form>
    </div>
    </div>
   
    <script src="/javascript/utilityFunctions.js"></script>
    <script src="/javascript/login.js"></script>


