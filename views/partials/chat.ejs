            <textarea rows="2" id="chatTextarea" name="chatTextarea" rows="4" cols="50"
                placeholder="Type and press Enter"></textarea>
            <button id="sendToWebserverBtn"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
        </div>
    
    </section>
