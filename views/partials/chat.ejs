<div id="chatSectionWrapper">
<section id="chatSection">
    <div id="chatContainer">
        <button id="loadPreChatBtn">Load previous messages</button>
    </div>
    <section id="typingContainer">
   
        <div id="imgImgContainer" class="hidden">
            <!-- This image tag is not meant to be seen -->
            <img class="hidden" id="msgImgInput" width="200">
